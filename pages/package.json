{
  "name": "chroniclesync-pages",
  "version": "1.0.1",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "npm run build:web && npm run build:extensions",
    "build:web": "tsc && vite build",
    "test": "tsc -p tsconfig.test.json --noEmit && jest",
    "test:coverage": "tsc -p tsconfig.test.json --noEmit && jest --coverage",
    "test:e2e": "tsc -p tsconfig.test.json --noEmit && BROWSER=chrome npm run build:extensions && playwright test --trace on --project=${TEST_GROUP:-basic}",
    "validate:manifests": "node scripts/validate-manifests.js",
    "build:extensions": "npm run validate:manifests && BROWSER=${BROWSER:-chrome} MANIFEST_VERSION=${MANIFEST_VERSION:-v3} vite build --mode extension",
    "package:chrome": "cd dist/chrome && rm -f ../../chroniclesync-chrome.zip && zip -r ../../chroniclesync-chrome.zip *",
    "package:firefox": "cd dist/firefox && rm -f ../../chroniclesync-firefox.zip && zip -r ../../chroniclesync-firefox.zip *",
    "package:safari": "bash -e ./scripts/build-safari-extension-direct.sh",
    "preview": "vite preview",
    "lint": "eslint \"src/**/*.{ts,tsx}\" \"e2e/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" \"e2e/**/*.{ts,tsx}\" --fix",
    "deploy": "wrangler pages deploy dist/web --project-name chroniclesync-pages"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "@playwright/test": "^1.49.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/chrome": "^0.0.294",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitejs/plugin-react": "^4.2.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.51.0",
    "eslint-plugin-react": "^7.37.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.2",
    "vite": "^5.0.0",
    "wrangler": "^3.0.0"
  }
}
