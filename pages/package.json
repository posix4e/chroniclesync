    "@playwright/test": "^1.39.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "wrangler": "^3.0.0"
  }
}