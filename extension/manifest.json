{
  "manifest_version": 3,
  "name": "ChronicleSync",
  "version": "1.0",
  "description": "ChronicleSync - IndexedDB Synchronization Service",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [{
    "resources": ["app/*"],
    "matches": ["<all_urls>"]
  }]
}