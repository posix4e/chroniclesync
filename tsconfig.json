{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "types": ["node", "@playwright/test", "chrome"],
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "jsx": "react",
    "allowJs": true
  },
  "include": ["extension/src/**/*.ts", "extension/src/**/*.tsx", "test/**/*.ts"]
}
