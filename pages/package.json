{
  "name": "chroniclesync-pages",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "npm run build:web && npm run build:extensions",
    "build:web": "tsc && vite build",
    "validate:manifests": "node scripts/validate-manifests.js",
    "build:extensions": "npm run validate:manifests && BROWSER=${BROWSER:-chrome} vite build --mode extension",
    "package:chrome": "cd dist/chrome && rm -f ../../chroniclesync-chrome.zip && zip -r ../../chroniclesync-chrome.zip *",
    "package:firefox": "cd dist/firefox && rm -f ../../chroniclesync-firefox.zip && zip -r ../../chroniclesync-firefox.zip *",
    "package:safari": "bash -e ./scripts/build-safari-extension-direct.sh",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "wdio run ./wdio.local.conf.js",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "deploy": "wrangler pages deploy dist/web --project-name chroniclesync-pages"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitejs/plugin-react": "^4.2.0",
    "@wdio/cli": "^8.32.3",
    "@wdio/globals": "^8.32.3",
    "@wdio/local-runner": "^8.32.3",
    "@wdio/mocha-framework": "^8.32.3",
    "@wdio/spec-reporter": "^8.32.2",
    "@wdio/types": "^8.32.2",
    "babel-jest": "^29.7.0",
    "chromedriver": "^122.0.3",
    "eslint": "^8.51.0",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-webdriverio": "^1.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.2",
    "vite": "^5.0.0",
    "wdio-chromedriver-service": "^8.1.1",
    "wrangler": "^3.0.0"
  }
}
