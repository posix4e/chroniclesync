{
  "name": "chroniclesync",
  "version": "1.0.0",
  "description": "ChronicleSync - P2P Browser Extension",
  "private": true,
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:firefox": "tsc && vite build --mode firefox",
    "build:extension": "node scripts/build-extension.cjs",
    "build:firefox-extension": "node scripts/build-firefox.cjs",
    "preview": "vite preview",
    "start:p2p": "node scripts/start-p2p-server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test p2p.spec.ts",
    "test:e2e:chrome": "BROWSER=chromium playwright test p2p.spec.ts --project=chromium",
    "test:e2e:firefox": "BROWSER=firefox playwright test p2p.spec.ts --project=firefox",
    "test:e2e:parallel": "npm run test:e2e:chrome & npm run test:e2e:firefox",
    "test:e2e:debug": "PWDEBUG=1 playwright test p2p.spec.ts",
    "test:p2p": "playwright test p2p.spec.ts",
    "test:connection": "playwright test p2p.spec.ts --grep \"P2P Connection\"",
    "test:sync": "playwright test p2p.spec.ts --grep \"P2P Data Synchronization\"",
    "test:conflict": "playwright test p2p.spec.ts --grep \"P2P Conflict Resolution\"",
    "test:performance": "playwright test p2p.spec.ts --grep \"P2P Performance\"",
    "test:security": "playwright test p2p.spec.ts --grep \"P2P Security\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "p2p",
    "sync",
    "browser-extension",
    "testing",
    "playwright"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "@playwright/test": "^1.52.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "^0.0.297",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.12.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.0.4",
    "babel-jest": "^29.7.0",
    "cors": "^2.8.5",
    "eslint": "^8.51.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "express": "^4.21.2",
    "htmlhint": "^1.1.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^26.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "stylelint": "^16.14.1",
    "stylelint-config-standard": "^37.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.2",
    "vite": "^5.0.12",
    "vitest": "^3.0.4"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^7.1.0",
    "@mui/material": "^7.1.0"
  }
}
