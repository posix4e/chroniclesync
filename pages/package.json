{
  "name": "chroniclesync-pages",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "wrangler pages dev src",
    "deploy": "wrangler pages deploy src --project-name chroniclesync-pages",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test:e2e": "playwright test"
  },
  "jest": {
    "testEnvironment": "miniflare",
    "testEnvironmentOptions": {
      "modules": true,
      "scriptPath": "src/_worker.js",
      "bindings": {
        "CSP_HEADER": "default-src 'self'; script-src 'self' 'unsafe-inline'; connect-src 'self' https://api.chroniclesync.xyz https://api-staging.chroniclesync.xyz http://localhost:8787; style-src 'self' 'unsafe-inline'; font-src 'self' data:;"
      }
    },
    "testMatch": [
      "**/src/__tests__/**/*.test.js"
    ],
    "setupFiles": ["<rootDir>/src/__tests__/setup.js"]
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "@cloudflare/workers-types": "^4.20230914.0",
    "@playwright/test": "^1.39.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.1",
    "eslint-plugin-jest": "^28.10.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-miniflare": "^2.14.1",
    "wrangler": "^3.101.0"
  }
}